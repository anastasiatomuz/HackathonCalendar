<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #26008c;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ViewDateController">
   <children>
      <Label fx:id="dateLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="223.0" layoutY="26.0" text="Date" textFill="#ffd747">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <TextArea fx:id="displayCurrentEvents" layoutX="38.0" layoutY="114.0" prefHeight="146.0" prefWidth="527.0" text="No events yet" />
      <Label layoutX="39.0" layoutY="91.0" text="List of Events for the Day" textFill="WHITE" />
      <TextField fx:id="eventToView" layoutX="388.0" layoutY="274.0" prefHeight="26.0" prefWidth="60.0" />
      <Label layoutX="38.0" layoutY="278.0" text="Type in the number associated with the event you want to view:" textFill="#f8f8f8" />
      <Button fx:id="viewEventButton" layoutX="483.0" layoutY="271.0" mnemonicParsing="false" onAction="#viewEvent" prefHeight="33.0" prefWidth="54.0" style="-fx-background-color: #ffd747;" text="Enter" textFill="#26008c" />
      <Button fx:id="exitViewDateButton" layoutX="30.0" layoutY="347.0" mnemonicParsing="false" onAction="#returnToWelcomePage" style="-fx-background-color: #ffd747;" text="Go Back" textFill="#26008c" />
      <Button layoutX="250.0" layoutY="334.0" mnemonicParsing="false" onAction="#addNewEvent" style="-fx-background-color: #ffd747;" text="Add New Event" textFill="#26008c" />
   </children>
</AnchorPane>
